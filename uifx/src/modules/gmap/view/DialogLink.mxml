	<mx:Canvas left="10" right="15" top="40" bottom="10">
		<mx:ComboBox top="0" left="0" right="0" id="point1"></mx:ComboBox>
		<mx:ComboBox top="30" left="0" right="0" id="point2"></mx:ComboBox>
