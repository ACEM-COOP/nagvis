prefix=@prefix@
SRC_SHARE=@srcdir@/share
SHARE_DIR=@datadir@
INSTALL=@INSTALL@
INSTALL_OPTS=@INSTALL_OPTS@

CP=@CP@

all: install

html: install

clean:

distclean: clean
	-rm Makefile

devclean: distclean

install:
	$(INSTALL) -m 775 $(INSTALL_OPTS) -d $(SHARE_DIR)
	
	$(INSTALL) -b -m 664 $(INSTALL_OPTS) $(SRC_SHARE)/index.php $(SHARE_DIR)/index.php; \
	
	if [ $(WUI) = yes ]; then \
		$(INSTALL) -b -m 664 $(INSTALL_OPTS) $(SRC_SHARE)/config.php $(SHARE_DIR)/config.php; \
	fi;
